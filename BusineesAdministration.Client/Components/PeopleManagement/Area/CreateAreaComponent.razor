@page "/area"

<HeaderTitleComponent Title="Gestión de areas" />
<div>
    <table>
        <thead>
            <tr>
                <th> Id </th>
                <th> Name </th>
                <th> Id Empleado responsable </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var area in Areas)
            {
                <tr>
                    <td>@area.AreaId</td>
                    <td>@area.AreaName</td>
                    <td>@area.LiableEmployerId</td>
                </tr>
            }
        </tbody>
    </table>
</div>